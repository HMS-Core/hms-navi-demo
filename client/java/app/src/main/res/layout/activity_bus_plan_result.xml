<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operation entity"
        android:textSize="11sp" />

    <RadioGroup
        android:id="@+id/bus_operation_entity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/bus_dr1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="China"
            android:checked="true"
            />

        <RadioButton
            android:id="@+id/bus_dr2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asia, Africa and Latin America"
            />

        <RadioButton
            android:id="@+id/bus_dr3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Europe"
            />

        <RadioButton
            android:id="@+id/bus_dr4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Russia"
            />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="begin point"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/bus_start_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="48.884021,2.405319"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="end point"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/bus_end_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="48.902643,3.055573"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Alternative Routes"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/bus_alternatives"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Returned information"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/bus_return_array"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="intermediate,polyline,actions,fares,travelSummary"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Walking distance (m)"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/bus_pedestrianMaxDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maximum number of transfers"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/bus_changes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Walking speed (m/s)"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/bus_pedestrianSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_apikey2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user_apikey: "
            android:textSize="11sp" />

        <EditText
            android:id="@+id/user_apikey_var2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="11sp"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_bus_routing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Bus Routing" />
    </LinearLayout>
</LinearLayout>
