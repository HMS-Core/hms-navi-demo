<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location setting"
            android:textSize="11sp" />

        <RadioGroup
            android:id="@+id/location_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/internal_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Internal location data"
                android:checked="true"
                />

            <RadioButton
                android:id="@+id/external_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="External location data"
                />
        </RadioGroup>
    </LinearLayout>

    <!--    Text view area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/location_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location info:"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/location_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/distance_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining distance:"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/distance_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining time:"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="11sp" />
    </LinearLayout>

    <!--    Button area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/start_emulator_navi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Emulator Navi" />

        <Button
            android:id="@+id/start_navi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Gps Navi" />

        <Button
            android:id="@+id/stop_navi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop Navi" />

        <Button
            android:id="@+id/update_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Location" />
    </LinearLayout>
</LinearLayout>
